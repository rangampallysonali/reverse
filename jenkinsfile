pipeline {
    agent {
        docker {
            image 'openjdk:17'
        }
    }
    stages {
        stage('Compile') {
    steps {
        sh """
            javac Example.java ExampleTest.java -cp .:junit-4.13.2.jar:hamcrest-core-1.3.jar
        """
    }
}

        stage('Test') {
            steps {
                sh 'java -cp .:junit-4.13.2.jar:hamcrest-core-1.3.jar org.junit.runner.JUnitCore ExampleTest'
            }
        }
        stage('Run') {
            steps {

                sh 'java Example'

                
            }
        }
    }
}
